<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->        
        <item name="android:actionDropDownStyle">@style/remotelocker.Widget.Holo.Spinner</item>
        <item name="android:spinnerDropDownItemStyle">@style/remotelocker.Widget.DropDownItem</item>        
    </style>
    
    <style name="remotelocker.Widget.Holo.Spinner" parent="@android:style/Widget.Holo.Light.Spinner">
        <!-- <item name="android:popupBackground">@android:color/white</item> -->
    </style>
	
	<style name="remotelocker.Widget.DropDownItem" parent="@android:style/Widget.DropDownItem">
	    <item name="android:textAppearance">@style/remotelocker.TextAppearance.Widget.DropDownItem</item>
	</style>
	
	<style name="remotelocker.TextAppearance.Widget.DropDownItem" parent="@android:style/TextAppearance.Widget.DropDownItem">
	    <item name="android:textColor">@android:color/black</item>
	</style>

</resources>
